
@model Game_Mania_Killer_App.Models.User
@using Game_Mania_Killer_App.Models



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Game Mania", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="Login">
                @if (this.Session["User"] != null)
            {
                User user = (User)this.Session["User"];
                 <div class="User">
                     <p>Welkom @user.Gebruikersnaam !</p>
                     <div class="row">
                         <div class="col-md-8"> <a class="btn btn-default" href="@Url.Action("Logout","Account")">Logout</a></div>
                     </div>
                 </div>
                }
                else
                {
                    <form action="@Url.Action("Login","Account")" method="post">
                        <div class="row">
                            <div class="col-md-5"><label><b>Gebruikersnaam:</b></label></div>
                            <div class="col-md-5"><input type="text" placeholder="Gebruikersnaam" name="Gebruikersnaam" required /></div>
                        </div>
                        <div class="row">
                            <div class="col-md-5"><label><b>Wachtwoord:</b></label></div>
                            <div class="col-md-5"><input type="password" placeholder="Wachtwoord" name="Wachtwoord" required /></div>
                        </div>
                        <div class="row">
                            <div class="col-md-5"><input class="btn btn-default" type="submit" value="Login" /></div>
                            <div class="col-md-5"><input type="checkbox" checked="checked" /> Remember me</div>
                        </div>
                    </form>
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Game mania app</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>


